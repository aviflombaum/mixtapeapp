<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @mixtape.name %>
</p>

<p>
  <b>Description:</b>
  <%= @mixtape.description %>
</p>

<p>
  <b>Songs</b>
  <ol>
    <% @mixtape.songs.each do |song| %>
    <li><%= link_to song.artist_name, song.artist %> - <%= link_to song.name, song %></li>
    <% end %>
  </ol>
</p>

<%= link_to 'Edit', edit_mixtape_path(@mixtape) %> |
<%= link_to 'Back', mixtapes_path %>
