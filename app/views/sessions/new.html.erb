<h1>Log in</h1>

<p id="notice" class="error"><%= flash.notice %></p>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <p><%= link_to "forgot your password?", new_password_reset_path %></p>
  
  <div class="actions"><%= submit_tag "Log in" %></div>
  <p>or login via <%= link_to image_tag('https://github.com/intridea/authbuttons/raw/master/png/twitter_32.png'), '/auth/twitter' %></p>
<% end %>
