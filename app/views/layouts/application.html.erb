<!DOCTYPE html>
<html>
<head>
  <title>Mixtapeapp</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>
  <section id="site">
  	<ul>
  		<li><%= link_to_unless_current "Artists", artists_path %></li>
  		<li><%= link_to_unless_current "Songs", songs_path %></li>
  		<li><%= link_to_unless_current "Mixtapes", mixtapes_path %></li>		
  		<li><%= link_to_unless_current "Genres", genres_path %></li>		
  	</ul>
  </section>

	<section id="submenu">
	  <%= yield :submenu %>
	</section>
</nav>

<section id="content">
	<%= yield %>
</section>

</body>
</html>
