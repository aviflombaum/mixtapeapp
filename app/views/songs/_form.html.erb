    <%# Genre.all.each do |genre| %>
      <!-- <option value="<%#= genre.id %>"><%#= genre.name %></option> -->
    <%# end %>
  <!-- </select> -->  
  <p>
    <%= f.label :genres%>
    <%#= #collection_select(:song, :genres, Genre.all, :id, :name)%>
    <%#= f.select(:genre_ids, genres_for_select, :multiple => true )%>
    
    <% Genre.all.each do |genre| %>
      <p>
        <%= genre.name %>
        <input type="checkbox" value="<%= genre.id %>" name="song[genre_ids][]" <%= "checked=checked" if @song.genre_ids.include?(genre.id)%>>
      </p>
    <% end%>
  </p>

  <p>
    <%= f.label :audio%>
    <%#= #collection_select(:song, :genres, Genre.all, :id, :name)%>
    <%= f.file_field :audio%>
  </p>

  <%= submit_tag %>
