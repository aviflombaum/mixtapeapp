    <%= f.label :name %>
    <%= f.text_field :name %> 
  </p>
 
 
  <p>
      <%= f.label :artist_name %>
      <%= f.text_field :artist_name %>      

    
    <%#= f.label :artist_name %>
    
    <!-- <input type="text" name="song[artist_name]" value="<#%= @song.artist_name %>" id="song_artist_name"> -->
    
